			// Do not set either minimum-width or -height here or it will override the code and the layout will break
			bgcolor=none
			render_bg
			{
				// background fill
				0="gradient( x0+2, y0+1, x1, y1-1, launch1, launch2 )"
			}
			render
			{
				1="image( x0 + 6, y0 + 11, x1, y1, graphics/icon_down_hover )"
